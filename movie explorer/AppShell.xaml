<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="movie_explorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:movie_explorer"
    Title="Movie Explorer"
   >
    

        <TabBar Title="Home">
            <ShellContent
            Title="Favourites"
            ContentTemplate="{DataTemplate local:Favourites}"
            Route="Favourites"
            />

            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

            <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:Settings}"
            Route="Settings"/>
        </TabBar>
  
</Shell>
    
    